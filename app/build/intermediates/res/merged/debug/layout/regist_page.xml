<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:src="@drawable/add"
        android:layout_gravity="center"
        android:id="@+id/iv_self_icon_regist"
        android:layout_width="100dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:gravity="center"
        android:id="@+id/llnickname"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="账号："
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_regist_page_username"
            android:hint="输入登录使用的账号"
            android:layout_width="200dp"
            android:text="123"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="密码："
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="输入登录密码"
            android:text="123"
            android:id="@+id/et_regist_page_password"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="昵称："
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_regist_page_nickname"
            android:hint="输入账号昵称"
            android:text="123"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="邮箱："
            android:textColor="@color/textColorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_regist_page_email"
            android:hint="输入邮箱"
            android:inputType="textEmailAddress"
            android:text="1621550607@qq.com"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:text="登录"
            android:id="@+id/btn_regist_page_login"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_frame"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="注册"
            android:id="@+id/btn_regist_page_regist"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_frame"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>